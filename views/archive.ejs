<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>archive</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="header">
        <nav>
            <% if (!process.env.VERCEL && !process.env.TURSO_DATABASE_URL) { %>
                <a href="/ss">notes</a>
            <% } %>
            <a href="/essays">essays</a>
            <a href="/shelf">shelf</a>
            <a href="/misc">misc</a>
            <a href="/about">about</a>
        </nav>
        <% if (isAdmin) { %>
            <a href="/admin/logout" class="login-link" style="color: #333; text-decoration: none; font-size: 0.95em; text-transform: lowercase;">logout</a>
        <% } else { %>
            <a href="#" onclick="openLoginModal(); return false;" class="login-link" style="color: #333; text-decoration: none; font-size: 0.95em; text-transform: lowercase;">login</a>
        <% } %>
    </div>

    <div class="container">
        <% if (posts.length === 0) { %>
            <div class="no-posts">
                no posts yet
            </div>
        <% } else { %>
            <div class="archive-list">
                <% posts.forEach(post => { %>
                    <div class="archive-item">
                        <a href="#post-<%= post.id %>"><%= post.title %></a>
                        <span class="post-date" style="display: inline; margin-left: 10px;">
                            <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                        </span>
                    </div>
                <% }) %>
            </div>

            <div style="margin-top: 50px;">
                <% posts.forEach(post => { %>
                    <div class="post" id="post-<%= post.id %>">
                        <h2 class="post-title"><%= post.title %></h2>
                        <span class="post-date"><%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                        <div class="post-content"><%= post.content %></div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div class="footer">
    </div>

    <%- include('partials/login-modal') %>
</body>
</html>
