<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>misc</title>
    <link rel="icon" type="image/png" href="/smileyslimeyboy.png">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden;
            height: 100vh;
        }

        .header {
            position: relative;
            z-index: 100;
        }

        .misc-container {
            position: fixed;
            top: 60px;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100vw;
            height: calc(100vh - 60px);
        }

        .bouncing-box {
            position: absolute;
            cursor: pointer;
            transition: opacity 0.2s;
            box-sizing: border-box;
            overflow: hidden;
            border: 2px solid #fff;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .bouncing-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .bouncing-box:hover {
            opacity: 0.9;
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal-content {
            background: #fff;
            border: 2px solid #BEBEFF;
            padding: 20px;
            width: 80vw;
            height: 80vh;
            max-width: 1200px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-content img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .modal-close {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 24px;
            cursor: pointer;
            color: #666;
            background: none;
            border: none;
        }

        .modal-close:hover {
            color: #000;
        }

        .modal-title {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #333;
        }

        .modal-text {
            line-height: 1.6;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="header">
        <nav>
            <a href="/writing">writing</a>
            <a href="/shelf">shelf</a>
            <a href="/misc">misc</a>
        </nav>
        <% if (isAdmin) { %>
            <a href="/admin/logout" class="login-link" style="color: #333; text-decoration: none; font-size: 0.95em; text-transform: lowercase;">logout</a>
        <% } else { %>
            <a href="#" onclick="openLoginModal(); return false;" class="login-link" style="color: #333; text-decoration: none; font-size: 0.95em; text-transform: lowercase;">login</a>
        <% } %>
    </div>

    <div class="misc-container" id="bounceContainer">
        <!-- Bouncing boxes will be generated by JavaScript -->
    </div>

    <!-- Modal -->
    <div class="modal-overlay" id="modalOverlay">
        <div class="modal-content">
            <button class="modal-close" id="modalClose">&times;</button>
            <img id="modalImage" src="" alt="">
        </div>
    </div>

    <div class="footer">
    </div>

    <%- include('partials/login-modal') %>

    <script>
        // Box configurations
        const boxes = [
            {
                width: 200,
                height: 150,
                speed: 1,
                zIndex: 1,
                image: '/images/misc/kokedera.webp'
            },
            {
                width: 250,
                height: 180,
                speed: 0.75,
                zIndex: 2,
                image: '/images/misc/kokedera2.webp'
            },
            {
                width: 180,
                height: 140,
                speed: 1.25,
                zIndex: 3,
                image: '/images/misc/JPEG image.jpeg'
            },
            {
                width: 220,
                height: 160,
                speed: 1.5,
                zIndex: 4,
                image: '/images/misc/JPEG image 2.jpeg'
            },
            {
                width: 190,
                height: 130,
                speed: 0.9,
                zIndex: 5,
                image: '/images/misc/kokedera.webp'
            },
            {
                width: 210,
                height: 170,
                speed: 1.1,
                zIndex: 6,
                image: '/images/misc/JPEG image.jpeg'
            },
            {
                width: 230,
                height: 155,
                speed: 0.85,
                zIndex: 7,
                image: '/images/misc/kokedera2.webp'
            },
            {
                width: 195,
                height: 145,
                speed: 1.3,
                zIndex: 8,
                image: '/images/misc/JPEG image 2.jpeg'
            }
        ];

        let animationId;
        let isPaused = false;
        const container = document.getElementById('bounceContainer');
        const modal = document.getElementById('modalOverlay');
        const modalImage = document.getElementById('modalImage');
        const modalClose = document.getElementById('modalClose');

        // Create box elements
        const boxElements = boxes.map((config, index) => {
            const box = document.createElement('div');
            box.className = 'bouncing-box';
            box.style.width = config.width + 'px';
            box.style.height = config.height + 'px';
            box.style.zIndex = config.zIndex;

            // Add image to box
            const img = document.createElement('img');
            img.src = config.image;
            img.alt = 'Misc image';
            box.appendChild(img);

            // Random starting position
            const x = Math.random() * (window.innerWidth - config.width);
            const y = Math.random() * (window.innerHeight - config.height);

            // Random direction (1 or -1)
            const dx = (Math.random() > 0.5 ? 1 : -1) * config.speed;
            const dy = (Math.random() > 0.5 ? 1 : -1) * config.speed;

            box.style.left = x + 'px';
            box.style.top = y + 'px';

            container.appendChild(box);

            // Add click handler
            box.addEventListener('click', () => {
                isPaused = true;
                modalImage.src = config.image;
                modal.classList.add('active');
            });

            return {
                element: box,
                x: x,
                y: y,
                dx: dx,
                dy: dy,
                width: config.width,
                height: config.height
            };
        });

        // Close modal handlers
        modalClose.addEventListener('click', () => {
            modal.classList.remove('active');
            isPaused = false;
            animate();
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.remove('active');
                isPaused = false;
                animate();
            }
        });

        // Get available height (accounting for header)
        function getAvailableHeight() {
            return container.clientHeight;
        }

        function getAvailableWidth() {
            return container.clientWidth;
        }

        // Animation loop
        function animate() {
            if (isPaused) return;

            const maxHeight = getAvailableHeight();
            const maxWidth = getAvailableWidth();

            boxElements.forEach(box => {
                // Update position
                box.x += box.dx;
                box.y += box.dy;

                // Bounce off edges
                if (box.x <= 0 || box.x >= maxWidth - box.width) {
                    box.dx *= -1;
                    box.x = Math.max(0, Math.min(box.x, maxWidth - box.width));
                }
                if (box.y <= 0 || box.y >= maxHeight - box.height) {
                    box.dy *= -1;
                    box.y = Math.max(0, Math.min(box.y, maxHeight - box.height));
                }

                // Apply position
                box.element.style.left = box.x + 'px';
                box.element.style.top = box.y + 'px';
            });

            animationId = requestAnimationFrame(animate);
        }

        // Start animation
        animate();

        // Handle window resize
        window.addEventListener('resize', () => {
            const maxHeight = getAvailableHeight();
            const maxWidth = getAvailableWidth();
            boxElements.forEach(box => {
                box.x = Math.min(box.x, maxWidth - box.width);
                box.y = Math.min(box.y, maxHeight - box.height);
            });
        });
    </script>
</body>
</html>
