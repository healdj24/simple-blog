<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>blog</title>
    <link rel="icon" type="image/png" href="/smileyslimeyboy.png">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .landing-screen {
            width: 100vw;
            height: 100vh;
            background-image: url('/images/misc/kokedera.webp');
            background-size: cover;
            background-position: center;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <script>
        const isProduction = '<%= process.env.VERCEL || process.env.TURSO_DATABASE_URL ? "true" : "false" %>' === 'true';
        const targetPage = isProduction ? '/essays' : '/ss';

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.landing-screen').addEventListener('click', function() {
                window.location.href = targetPage;
            });
        });
    </script>
    <div class="landing-screen"></div>
</body>
</html>
