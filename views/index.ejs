<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>blog</title>
    <link rel="icon" type="image/png" href="/smileyslimeyboy.png">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .landing-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-image: url('/images/misc/kokedera.webp');
            background-size: cover;
            background-position: center;
            cursor: pointer;
            z-index: 9999;
            transition: opacity 0.3s ease;
        }

        .landing-screen.fade-out {
            opacity: 0;
            pointer-events: none;
        }

        .header {
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.4s ease, transform 0.4s ease;
        }

        .header.show {
            opacity: 1;
            transform: translateY(0);
        }

        .container-with-sidebar {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.4s ease 0.2s, transform 0.4s ease 0.2s;
        }

        .container-with-sidebar.show {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <div class="landing-screen" id="landingScreen"></div>

    <div class="header" id="header">
        <nav>
            <a href="/ss">notes</a>
            <a href="/">essays</a>
            <a href="/misc">misc</a>
            <a href="/about">about</a>
        </nav>
        <a href="/admin/login" class="login-link" style="color: #333; text-decoration: none; font-size: 0.95em; text-transform: lowercase;">login</a>
    </div>

    <div class="container-with-sidebar" id="content">
        <div class="main-content">
            <% if (posts.length === 0) { %>
                <div class="no-posts">
                    no essays yet
                </div>
            <% } else { %>
                <div class="archive-list">
                    <% posts.forEach(post => { %>
                        <div class="archive-item">
                            <div>
                                <a href="/essay/<%= post.id %>"><%= post.title %></a>
                                <span class="post-date" style="display: inline; margin-left: 10px;">
                                    <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                </span>
                            </div>
                            <% const preview = getPreview(post.content); %>
                            <% if (preview) { %>
                                <div class="post-subheading" style="margin-top: 4px; font-size: 0.9em;">
                                    <%= preview %>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>

        <div class="sidebar">
            <div class="sidebar-card">
                <h3 style="margin-top: 0; font-size: 1em; font-weight: normal; margin-bottom: 15px;">things to write about</h3>
                <ul style="margin: 0; padding-left: 20px; line-height: 1.8;">
                    <% sidebarTopics.forEach(topic => { %>
                        <li><%= topic %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <div class="footer">
    </div>

    <script>
        const landingScreen = document.getElementById('landingScreen');
        const header = document.getElementById('header');
        const content = document.getElementById('content');

        // Show landing screen and wait for click
        landingScreen.addEventListener('click', () => {
            // Fade out landing screen
            landingScreen.classList.add('fade-out');

            // After landing screen fades, show content with snap animation
            setTimeout(() => {
                landingScreen.style.display = 'none';
                header.classList.add('show');
                content.classList.add('show');
            }, 300);
        });
    </script>
</body>
</html>
